[Unit]
Description="Nomad workload orchestration"
Documentation=https://nomadproject.io/
Requires=network-online.target
After=network-online.target
Requires=cloud-init.target
After=cloud-init.target

[Service]
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/usr/local/sbin/nomad agent -config /etc/nomad.d
KillMode=process
KillSignal=SIGINT
LimitNOFILE=infinity
LimitNPROC=infinity
Restart=on-failure
RestartSec=2
StartLimitBurst=3
TasksMax=infinity

[Install]
WantedBy=default.target
